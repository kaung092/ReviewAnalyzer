{
  "manifest_version": 2,
  "name": "Review Analyzer",
	"icons":{
			
		},
  "description": "Reviews give us quite a lot of information about the products, service etc. Yet Nobody has time to read all of them.
									This extension will analyze all reviewers' comments on Amazon & Yelp. 
									Just click on the icon and get useful data extracted from all reviews",
  "version": "1.0",
	"icons": {
      "128": "img/icon128.png"
   },
	"background":{
		"scripts": [
									"lib/jquery-3.1.0.min.js",
									"js/popup.js"
								] 
	},
	"content_scripts": [
		{
			"matches": ["https://www.amazon.com/*"],
			"css": [
							"css/style.css",
							"css/jquery-ui-1.12.0/jquery-ui.theme.css"
							],
			"js": [
							"lib/jquery-3.1.0.min.js",
							"lib/jquery-ui.min.js",
							"js/Amazon.js"
						]
		},
		{
			"matches": ["https://www.yelp.com/*"],
			"css": ["css/style.css"],
			"js": ["lib/jquery-3.1.0.min.js","js/Yelp.js"]
		}
	],
  "browser_action": {
    "default_icon": "img/R.png",
    "default_popup": "popup.html",
		"default_title": "Start Analyzing Review!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
